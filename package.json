{
  "name": "journey-radar",
  "private": true,
  "type": "module",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "check": "biome check --write .",
    "lint": "biome lint",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @journey-radar/backend dev",
    "dev:setup": "turbo -F @journey-radar/backend dev:setup",
    "gtfs:test": "cd packages/backend && bun run scripts/test-gtfs.ts",
    "gtfs:service": "cd packages/backend && bun run scripts/gtfs-service.ts",
    "gtfs:load": "cd packages/backend && bunx convex run internal.gtfs.refreshAllGTFSData"
  },
  "dependencies": {
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "^2.2.0"
  },
  "packageManager": "bun@1.2.23"
}
